import os
import cv2
import numpy as np
from pathlib import Path
from ultralytics import YOLO
import torch
from pdf2image import convert_from_path
from PIL import Image
torch.manual_seed(42)
np.random.seed(42)
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
print(f"Using device: {device}")

def calculate_iou(box1, box2):
    x1_1, y1_1, x2_1, y2_1 = box1
    x1_2, y1_2, x2_2, y2_2 = box2
    
    x1_inter = max(x1_1, x1_2)
    y1_inter = max(y1_1, y1_2)
    x2_inter = min(x2_1, x2_2)
    y2_inter = min(y2_1, y2_2)
    
    if x2_inter <= x1_inter or y2_inter <= y1_inter:
        return 0.0
    
    inter_area = (x2_inter - x1_inter) * (y2_inter - y1_inter)
    box1_area = (x2_1 - x1_1) * (y2_1 - y1_1)
    box2_area = (x2_2 - x1_2) * (y2_2 - y1_2)
    union_area = box1_area + box2_area - inter_area
    
    return inter_area / union_area

def filter_overlapping_boxes(bboxes, iou_threshold=0.3):
    if len(bboxes) <= 1:
        return bboxes
    
    filtered_boxes = []
    used_indices = set()
    
    for i in range(len(bboxes)):
        if i in used_indices:
            continue
        
        current_box = bboxes[i]
        filtered_boxes.append(current_box)
        used_indices.add(i)
        
        for j in range(i + 1, len(bboxes)):
            if j in used_indices:
                continue
            
            iou = calculate_iou(current_box, bboxes[j])
            if iou > iou_threshold:
                used_indices.add(j)
    
    return np.array(filtered_boxes)

def select_pdf():
    print("Please enter the full path to the PDF file (e.g., /path/to/document.pdf):")
    file_path = input().strip()
    if not file_path.lower().endswith('.pdf') or not Path(file_path).is_file():
        print(f"Error: {file_path} must be a valid .pdf file.")
        return None
    return file_path
def convert_pdf_to_images(pdf_path, dpi=300):
    images = convert_from_path(pdf_path, dpi=dpi)
    return images
def infer_signature_on_image(model, image, conf_threshold=0.5):
    open_cv_image = np.array(image)
    open_cv_image = cv2.cvtColor(open_cv_image, cv2.COLOR_RGB2BGR)
    temp_path = "temp_image.jpg"
    cv2.imwrite(temp_path, open_cv_image)
    results = model.predict(
        source=temp_path,
        conf=conf_threshold,
        device=device,
        verbose=False
    )
    signed_status = "Unsigned"
    bboxes = []
    if results and results[0].boxes:
        bboxes = results[0].boxes.xyxy.cpu().numpy()
        bboxes = filter_overlapping_boxes(bboxes)
        if len(bboxes) > 0:
            signed_status = "Signed"
        for bbox in bboxes:
            x1, y1, x2, y2 = map(int, bbox)
            cv2.rectangle(open_cv_image, (x1, y1), (x2, y2), (0, 255, 0), 4)
            cv2.putText(open_cv_image, "Signature", (x1, y1 - 10), cv2.FONT_HERSHEY_SIMPLEX, 1.2, (0, 255, 0), 3)
    annotated_pil = Image.fromarray(cv2.cvtColor(open_cv_image, cv2.COLOR_BGR2RGB))
    return signed_status, bboxes, annotated_pil
def main():
    print("PDF Signature Detection Inference Pipeline")
    model_path = "/kaggle/working/yolo_project_logs/signature_detection/weights/best.pt"
    if not Path(model_path).exists():
        print(f"Error: YOLO model not found at {model_path}")
        return
    pdf_path = select_pdf()
    if not pdf_path:
        return
    print("Converting PDF to images...")
    images = convert_pdf_to_images(pdf_path)
    model = YOLO(model_path)
    output_dir = Path("pdf_inference_results")
    output_dir.mkdir(exist_ok=True)
    annotated_images = []
    for i, image in enumerate(images):
        print(f"Processing page {i+1}...")
        signed_status, bboxes, annotated = infer_signature_on_image(model, image)
        annotated_images.append(annotated)
        
        annotated_path = output_dir / f"page_{i+1}_result.jpg"
        annotated.save(annotated_path)
        txt_path = output_dir / f"page_{i+1}_results.txt"
        with open(txt_path, 'w') as f:
            f.write(f"Page {i+1} - Document Status: {signed_status}\n")
            f.write(f"Number of Signatures Detected: {len(bboxes)}\n")
            for j, bbox in enumerate(bboxes, 1):
                x1, y1, x2, y2 = map(int, bbox)
                f.write(f"Signature {j}: Bounding Box (x1, y1, x2, y2) = ({x1}, {y1}, {x2}, {y2})\n")
        print(f"Saved page {i+1} results.")
    final_pdf_path = output_dir / "annotated_signed_document.pdf"
    annotated_images[0].save(final_pdf_path, save_all=True, append_images=annotated_images[1:])
    print(f"\nFinal annotated PDF saved at: {final_pdf_path}")
if __name__ == "__main__":
    main()
